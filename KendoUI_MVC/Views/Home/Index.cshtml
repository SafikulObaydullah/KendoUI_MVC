@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="text-center">
    <h1 class="display-4">Kendo UI in ASP.net Core </h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="col-md-12">
    <p>Kendo UI version <strong id="kendoVersion"></strong></p>
   
</div>


<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div id="tshirt-view" class="k-w-300">
        <h4>Customize your Kendo T-shirt</h4>
        
        <label for="fabric">T-shirt Fabric</label>
        <input id="fabric" />

        <button class="k-button k-button-solid-primary k-button-solid k-button-md k-rounded-md" id="get" style="margin-top: 2em; float: right;">Customize</button>
    </div>
</div>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <label for="datepicker">Show e-mails from:</label>
        <input id="datepicker" value="05/03/2023" title="datepicker" />
        <br />
        <br />
        <br />
        <label for="dateinput">Add to archive mail from:</label>
        <input id="monthpicker" value="June 2023" title="monthpicker" />
    </div>
</div>

<style>
    #tshirt {
        display: block;
        margin: 2em auto;
    }

    .k-readonly {
        color: gray;
    }
    #datepicker{
        touch-action:auto
    }
</style>

