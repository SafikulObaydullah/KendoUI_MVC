<body style="background:#f8f9fc">
    <!--CSS Spinner-->
    <div class="spinner-wrapper">
        <div class="spinner">
        </div>
    </div>
    <span style="display:none;" id="spnEmpID">@ViewBag.EmployeeId</span>
    <div id="example">
        <div id="megaStore" class="k-content" style="position: fixed; width: 100%; z-index: 100000; box-shadow: 5px 3px 5px #95bdc6; font-size: 12px;">
            <ul id="menu" style="background: linear-gradient(to bottom, #51bbd2 0%, #2d97af 100%); color: white;">
                <li>
                    <span id="goto-home"> <img alt="icon" class="k-image" style="margin: -5px 4px 0 -4px;" src="~/Assets/lib/kendoUI/images/Essentials/dird_icon.png">Accounts  </span>

                  
                </li>
                <li aria-haspopup="true" aria-expanded="false" class="k-item k-menu-item k-state-default k-first" role="menuitem" style="z-index: auto;" id="menuactive">
                    

                </li>
                <li aria-haspopup="true" aria-expanded="false" class="k-item k-menu-item k-state-default k-first" role="menuitem" style="z-index: auto;" id="menuactive--mobile">


                </li>
                <li style="float:right;" id="user">
                    <span>@*@User.Identity.GetEmployeeName() (@User.Identity.GetEmployeeId())*@</span>
                   
                    <ul>
                        <li style="font-size:13px;" id="windowChangePassword">
                           Change Password
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Home", FormMethod.Post, new { id = "logoutForm" }))
                            {
                                <a href="javascript:document.getElementById('logoutForm').submit()" id="btnLogoff"><span  style="color:#787878;"> Logout</span></a>
                            }

                        </li>
                    </ul>
                </li>

            </ul>
        </div>

    </div>


    <div style="display: none; overflow:hidden;" id="windowChangePassword">

        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4">
                <span>Old Password</span>    <input type="password" id="txtOldPassword" class="textbox">
            </div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-4">
                <span>New Password</span>    <input type="password" id="txtNewPassword" class="textbox">
            </div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-4">
                <span>Confirm Password</span>    <input type="password" id="txtConfirmPassword" class="textbox">
            </div>
        </div>
        <div class="row">
            <div class="col-md-1"></div>

            <div class="col-md-1"><button onclick="btnChangePassword()" style="margin-top:22px;margin-left: 65px;" id="btnchangePass" class="k-primary primaryTextButton">Change</button></div>
        </div>

    </div>

    <span id="popupNotification"></span>
    <div style="display:none; text-align:center; font-size:17px;font-weight:bold; color:#7a9f0b" id="Loadwindow"></div>
    <div class="body-elements" style="padding-bottom: 30px; position: sticky;z-index: 1000;"></div>
    <div id="body" class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer style="position:fixed;bottom:0;right:1%;">
            <p style="font-size:14px;">&copy;  Developed By <a href="https://www.ravensystemsltd.com/" target="_blank" style="text-decoration:none;color:#49ead3; font-weight:bold">Raven Systems Ltd.</a></p>
        </footer>
    </div>

    <script>
        $("#user.k-animation-container").css("right", "0");
        
        $(document).ready(function () {
            //Preloader
            preloaderFadeOutTime = 500;
            function hidePreloader() {
                var preloader = $('.spinner-wrapper');
                preloader.fadeOut(preloaderFadeOutTime);
            }
            
            navMenu(renderMenu, false);
            navMenu(renderMobileMenu, true);

            // keep the following function below of all code
            hidePreloader();
        });

        function renderMenu(menuEl) {
            document.querySelector('#menuactive').append(menuEl);
            $(".nav-menu").kendoMenu();
        }

        function renderMobileMenu(menuEl) {
            document.querySelector('#menuactive--mobile').append(menuEl);
            $(".nav-menu").kendoMenu();
        }

       

    </script>
